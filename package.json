  "description": "Automated Scoping Review System - PRISMA-ScR compliant with Claude AI",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "reviewscope": "./dist/index.real.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.real.ts",
